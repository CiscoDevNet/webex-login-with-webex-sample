					"raw": "https://webexapis.com/v1/.well-known/openid-configuration",
					"protocol": "https",
					"host": [
						"webexapis",
						"com"
					],
					"path": [
						"v1",
						".well-known",
						"openid-configuration"
					]
				}
			},
			"response": []
		},
		{
			"name": "Launch Authorization Code Flow",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							""
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"protocolProfileBehavior": {
				"followRedirects": false
			},
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "GET",
				"header": [],
				"url": {
					"raw": "https://webexapis.com/v1/authorize?client_id={{client_id}}&scope=openid email&response_type=code&redirect_uri={{redirect_uri}}&state=state_random_string",
					"protocol": "https",
					"host": [
						"webexapis",
						"com"
					],
					"path": [
						"v1",
						"authorize"
					],
					"query": [
						{
							"key": "client_id",
							"value": "{{client_id}}"
						},
						{
							"key": "scope",
							"value": "openid email",
							"description": "Add additional Webex REST API scopes as needed"
						},
						{
							"key": "response_type",
							"value": "code"
						},
						{
							"key": "redirect_uri",
							"value": "{{redirect_uri}}",
							"description": "Browser will report 'Connection Refused' but authorization code can be view/copied from the URL bar"
						},
						{
							"key": "state",
							"value": "state_random_string"
						},
						{
							"key": "nonce",
							"value": "none_random_string",
							"description": "Used with PKCE",
							"disabled": true
						},
						{
							"key": "code_challenge_method",
							"value": "S256",
							"description": "Used with PKCE",
							"disabled": true
						},
						{
							"key": "code_challenge",
							"value": "",
							"description": "Used with PKCE",
							"disabled": true
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "Request Access Token",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200 OK\", pm.response.code == 200);",
							"",
							"var jsonData = JSON.parse(responseBody);",
							"pm.collectionVariables.set(\"_access_token\", jsonData.access_token);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "basic",
					"basic": [
						{
							"key": "username",
							"value": "{{client_id}}",
							"type": "string"
						},
						{
							"key": "password",
							"value": "{{client_secret}}",
							"type": "string"
						}
					]
				},
				"method": "POST",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "urlencoded",
					"urlencoded": [
						{
							"key": "grant_type",
							"value": "authorization_code",
							"type": "text"
						},
						{
							"key": "code",
							"value": "MjlkN2M2N2MtMjcxNS00ZTQxLWIzOTUtNTA2MTY1NGNjY2I0NzIyNTE0OWYtMmFl_PF84_beac9fee-ee78-4a70-b13d-048f151d8d6b",
							"description": "Copy from browser URL after Idp authentication",
							"type": "text"
						},
						{
							"key": "redirect_uri",
							"value": "{{redirect_uri}}",
							"type": "text"
						},
						{
							"key": "code_verifier",
							"value": "",
							"description": "Used with PKCE",
							"type": "text",
							"disabled": true
						}
					]
				},
				"url": {
					"raw": "https://webexapis.com/v1/access_token",
					"protocol": "https",
					"host": [
						"webexapis",
						"com"
					],
					"path": [
						"v1",
						"access_token"
					]
				}
			},
			"response": []
		},
		{
			"name": "UserInfo",
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": [
						{
							"key": "token",
							"value": "{{_access_token}}",
							"type": "string"
						}
					]
				},
				"method": "GET",
				"header": [
					{
